
<% include ./Partials/Header.ejs %>

<div class="w-full h-screen flex items-center justify-center bg-zinc-500">
  <div class="w-full max-w-md p-8 bg-zinc-600 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Welcome To Pinterest</h1>
    <form action="/login" method="post" class="space-y-4">
      <div>
        <input class="w-full py-2 px-4 bg-zinc-200 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="text" name="username" placeholder="Username" required>
      </div>
      <div>
        <input class="w-full py-2 px-4 bg-zinc-200 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="password" name="password" placeholder="Password" required>
      </div>
      <div class="flex justify-between">
        <a class="text-blue-600 hover:underline" href="#">Forgot password</a>
        <input class="py-2 px-6 bg-red-700 text-zinc-200 rounded hover:bg-red-800 cursor-pointer" type="submit" value="Login">
      </div>
      <p class="text-sm text-center mt-4">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
    </form>
    <p class="text-center mt-2">
      <a href="/register" class="text-blue-600 hover:underline">Don't Have an Account? Register</a>
    </p>
  </div>
</div>

