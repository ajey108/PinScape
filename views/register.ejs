<% include ./Partials/Header.ejs %>

<div class="w-full h-screen bg-zinc-500 flex items-center justify-center">
    <div class="w-full max-w-md p-8 bg-zinc-800 text-zinc-200 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Create a New Account</h1>
      <form action="register" method="POST" class="space-y-4">
        <div>
          <input class="w-full py-2 px-4 bg-zinc-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="text" name="username" placeholder="Username" required>
        </div>
        <div>
          <input class="w-full py-2 px-4 bg-zinc-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="email" name="email" placeholder="Email" required>
        </div>
        <div>
          <input class="w-full py-2 px-4 bg-zinc-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="number" name="contact" placeholder="Contact" required>
        </div>
        <div>
          <input class="w-full py-2 px-4 bg-zinc-700 rounded focus:outline-none focus:ring-2 focus:ring-red-500" type="password" name="password" placeholder="Password" required>
        </div>
        <div>
          <input class="w-full py-2 px-4 bg-red-700 text-zinc-200 rounded hover:bg-red-800 cursor-pointer" type="submit" value="Create New Account">
        </div>
      </form>
      <p class="text-sm text-center mt-4">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
      <p class="text-center mt-2">
        <a href="/login" class="text-red-500 hover:underline">Login into existing account?</a>
      </p>
    </div>
  </div>

<% include ./Partials/Footer.ejs %>
